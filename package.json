{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://antonomelchuk.github.io/portfolio",
  "dependencies": {
    "gh-pages": "^2.1.1",
    "prettier": "^1.19.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-particles-js": "^2.7.0",
    "react-reveal": "^1.2.2",
    "react-scripts": "3.1.1",
    "react-scroll": "^1.7.14",
    "react-tilt": "^0.1.4",
    "yarn": "^1.19.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix --color"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
